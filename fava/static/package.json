{
  "name": "fava",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -cw",
    "lint": "eslint javascript --fix && stylelint 'css/*.css' --fix && npm run format",
    "format": "cd ../../ && prettier '**/*.{css,js,md,svelte}' --check --write --ignore-path .gitignore"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css}": [
      "stylelint --fix",
      "git add"
    ],
    "*.{css,js,svelte,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "proseWrap": "always",
    "trailingComma": "es5",
    "overrides": [
      {
        "files": "*.svelte",
        "options": {
          "parser": "html",
          "tabWidth": 2
        }
      }
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "env": {
      "browser": true
    },
    "rules": {
      "import/prefer-default-export": 0,
      "prefer-destructuring": [
        "error",
        {
          "object": true,
          "array": false
        }
      ]
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recess-order",
      "stylelint-config-prettier"
    ]
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.15.3",
    "rollup": "^1.9.0",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-css-only": "^1.0.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^4.2.0",
    "rollup-plugin-svelte": "^5.0.3",
    "stylelint": "^9.10.1",
    "stylelint-config-prettier": "^5.0.0",
    "stylelint-config-recess-order": "^2.0.1",
    "stylelint-config-standard": "^18.2.0"
  },
  "dependencies": {
    "codemirror": "^5.45.0",
    "d3-array": "^2.0.3",
    "d3-axis": "^1.0.12",
    "d3-delaunay": "^4.1.5",
    "d3-format": "^1.3.2",
    "d3-hierarchy": "^1.1.8",
    "d3-scale": "^3.0.0",
    "d3-scale-chromatic": "^1.3.3",
    "d3-selection": "^1.3.2",
    "d3-shape": "^1.3.5",
    "d3-time-format": "^2.1.3",
    "d3-transition": "^1.2.0",
    "mousetrap": "^1.6.3",
    "svelte": "^3.0.0-beta.22",
    "typeface-fira-mono": "0.0.72",
    "typeface-fira-sans": "0.0.54",
    "typeface-source-code-pro": "0.0.71",
    "typeface-source-serif-pro": "0.0.73"
  }
}

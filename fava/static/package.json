{
  "name": "fava",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "watch-js": "rollup -c -w",
    "watch-css": "postcss -lw -u 'postcss-import' -u 'postcss-cssnext' -o 'gen/style.css' css/style.css",
    "lint": "eslint javascript --ext .js && stylelint 'css/*.css'"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "number-leading-zero": "never",
      "custom-property-empty-line-before": null,
      "order/properties-alphabetical-order": true
    }
  },
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "postcss": "^6.0.1",
    "postcss-cli": "^4.0.0",
    "postcss-copy": "^7.0.0",
    "postcss-cssnext": "^2.10.0",
    "postcss-import": "^9.1.0",
    "rollup": "^0.41.6",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-json": "^2.1.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-postcss": "^0.4.3",
    "rollup-watch": "^3.2.2",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-order": "^0.4.4"
  },
  "dependencies": {
    "@typopro/web-fira-mono": "^3.4.9",
    "@typopro/web-fira-sans": "^3.4.9",
    "@typopro/web-source-code-pro": "^3.4.9",
    "@typopro/web-source-serif-pro": "^3.4.9",
    "awesomplete": "git+https://github.com/LeaVerou/awesomplete.git#gh-pages",
    "classlist.js": "^1.1.20150312",
    "clipboard": "^1.6.1",
    "codemirror": "^5.25.2",
    "d3-array": "^1.2.0",
    "d3-axis": "^1.0.6",
    "d3-format": "^1.2.0",
    "d3-hierarchy": "^1.1.4",
    "d3-scale": "^1.0.5",
    "d3-scale-chromatic": "^1.1.1",
    "d3-selection": "^1.0.6",
    "d3-shape": "^1.0.6",
    "d3-time-format": "^2.0.5",
    "d3-transition": "^1.0.4",
    "d3-voronoi": "^1.1.2",
    "element-closest": "^2.0.2",
    "es6-promise": "^4.1.0",
    "fuzzyjs": "^2.1.2",
    "mousetrap": "^1.6.1",
    "urijs": "^1.18.10",
    "whatwg-fetch": "^2.0.3"
  }
}
